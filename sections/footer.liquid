<footer class="footer section text-center">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <ul class="social-media">
          {% if section.settings.url_facebook != blank %}
            <li>
              <a href="{{section.settings.url_facebook}}">
                <i class="fa fa-facebook-f"></i>
              </a>
            </li>
          {% endif %}
          {% if section.settings.url_instagram != blank %}
            <li>
              <a href="{{section.settings.url_instagram}}">
                <i class="fa fa-instagram"></i>
              </a>
            </li>
          {% endif %}
          {% if section.settings.url_twitter != blank %}
            <li>
              <a href="{{section.settings.url_twitter}}">
                <i class="fa fa-twitter"></i>
              </a>
            </li>
          {% endif %}
          {% if section.settings.url_pinterest != blank %}
            <li>
              <a href="{{section.settings.url_pinterest}}">
                <i class="fa fa-pinterest"></i>
              </a>
            </li>
          {% endif %}
        </ul>
        <ul class="footer-menu">
          {% for block in section.blocks %}
            <li>
              <a href="{{block.settings.link_url}}">{{block.settings.link_text}}</a>
            </li>
          {% endfor %}
        </ul>
        <p class="copyright-text">{{section.settings.copyright_text}} &#9400;</p>
      </div>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "url",
      "id": "url_instagram",
      "label": "Instagram Link"
    },
    {
      "type": "url",
      "id": "url_pinterest",
      "label": "Pinterest Link"
    },
    {
      "type": "url",
      "id": "url_facebook",
      "label": "Facebook Link"
    },
    {
      "type": "url",
      "id": "url_twitter",
      "label": "Twitter Link"
    },
    {
      "type": "text",
      "id": "copyright_text",
      "label": "Copyright Text",
      "default": "Copyright Fashion"
    }
  ],
  "blocks": [
    {
      "type": "text",
      "name": "Footer Link",
      "settings": [
        {
          "type": "text",
          "id": "link_text",
          "label": "Link Text"
        },
        {
          "type": "url",
          "id": "link_url",
          "label": "Link URL"
        }
      ]
    }
  ]
}
{% endschema %}